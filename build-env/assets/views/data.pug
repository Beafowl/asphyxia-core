  //-           span.icon
  //-             i.mdi.mdi-account
  //-           | Profile
  //-       .card-content
  //-   .column

  .columns.is-multiline
    each plugin in pluginStats
      .column.is-half
        .card
          header.card-header
            p.card-header-title
              span.icon
                i.mdi.mdi-puzzle
              | #{plugin.id}
          .card-content
            .level
              .level-item.has-text-centered
                div
                  p.heading Plugin
                  p.subtitle #{plugin.name}
              .level-item.has-text-centered
                div
                  p.heading Data Usage
                  p.subtitle #{plugin.dataSize}
            .buttons.is-right
              a.button.is-primary
                span.icon.is-small
                  i.mdi.mdi-table
                span Query
              button.button.is-danger.is-outlined.jb-modal.data-delete-button(data-target="confirm-modal" deleting=plugin.id deleting-name=plugin.id)
                span.icon.is-small
                  i.mdi.mdi-trash-can
                span Delete

  +confirm("Deleting all data of", "test/")
    p
      b Are you sure?
    p You will not be able to undo this action.